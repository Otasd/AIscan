                severity_symbol = "üü¢ LOW"
            
            print(f"   {severity_symbol} {v['cve_id']} - CVSS {v['cvss_score']} ({v['severity']})")
            print(f"      {v['description']}")
            
            if v['cvss_score'] >= 9.0:
                print(f"      ‚ö° EXPLOITATION: Likely available (check Exploit-DB)")
    else:
        print("   ‚úì No known CVEs found in NVD")
