if [ "$SKIP_VULNINTEL" = false ]; then
    echo -e "${BOLD}${CYAN}üõ°Ô∏è  PHASE 3: CVE INTELLIGENCE GATHERING${NC}"
    echo ""
    
    # Enhanced inline VulnIntel script - parses ALL scan results
    cat > "$TEMP_DIR/vulnintel_enhanced.py" << 'EOFPYTHON'
#!/usr/bin/env python3
import re, requests, json, sys
from typing import List, Dict, Set

NVD_API_KEY = "3D60BBF1-DAC2-F011-8364-129478FCB64D"

def parse_all_services(scan_text: str) -> List[Dict]:
    """Extract services from ALL scan results (Nmap, WhatWeb, Nikto, etc.)"""
    services = []
    seen_services = set()  # Avoid duplicates
    
    # 1. Parse Nmap output
    nmap_pattern = r'(\d+)/(tcp|udp)\s+open\s+(\S+)\s*(.*?)(?:\n|$)'
    for match in re.finditer(nmap_pattern, scan_text, re.MULTILINE):
        port, proto, service, version_info = match.groups()
        product, version = extract_product_version(version_info)
        
        if product and version:
            key = f"{product}_{version}"
            if key not in seen_services:
                services.append({
                    'port': port, 'protocol': proto, 'service': service,
                    'product': product, 'version': version, 'source': 'nmap'
                })
                seen_services.add(key)
    
    # 2. Parse WhatWeb output
    whatweb_patterns = {
        r'Apache\[([^\]]+)\]': 'Apache',
        r'nginx\[([^\]]+)\]': 'nginx',
        r'PHP\[([^\]]+)\]': 'PHP',
        r'MySQL\[([^\]]+)\]': 'MySQL',
        r'WordPress\[([^\]]+)\]': 'WordPress',
        r'jQuery\[([^\]]+)\]': 'jQuery',
        r'OpenSSL\[([^\]]+)\]': 'OpenSSL',
        r'Drupal\[([^\]]+)\]': 'Drupal',
        r'Joomla\[([^\]]+)\]': 'Joomla',
    }
    
    for pattern, product in whatweb_patterns.items():
        match = re.search(pattern, scan_text)
        if match:
            version = match.group(1)
            key = f"{product}_{version}"
            if key not in seen_services:
                services.append({
                    'port': 'N/A', 'protocol': 'http', 'service': 'web',
                    'product': product, 'version': version, 'source': 'whatweb'
                })
                seen_services.add(key)
    
    # 3. Parse Nikto output for server versions
    nikto_server = re.search(r'\+ Server:\s+([^\s]+)/([\d.]+)', scan_text)
    if nikto_server:
        product, version = nikto_server.groups()
        key = f"{product}_{version}"
        if key not in seen_services:
            services.append({
                'port': 'N/A', 'protocol': 'http', 'service': 'web',
                'product': product, 'version': version, 'source': 'nikto'
            })
            seen_services.add(key)
    
    # 4. Parse SSL certificate for OpenSSL/TLS versions
    ssl_match = re.search(r'(OpenSSL|TLS)\s+([\d.]+[a-z]*)', scan_text, re.IGNORECASE)
    if ssl_match:
        product, version = ssl_match.groups()
        key = f"{product}_{version}"
        if key not in seen_services:
            services.append({
                'port': '443', 'protocol': 'tcp', 'service': 'ssl',
                'product': product, 'version': version, 'source': 'ssl'
            })
            seen_services.add(key)
    
    return services

def extract_product_version(version_info: str) -> tuple:
    """Extract product and version from version string"""
    if not version_info:
        return "", ""
    
    parts = version_info.split()
    if len(parts) < 1:
        return "", ""
    
    product = parts[0]
    version = ""
    
    for part in parts[1:]:
        if re.match(r'[\d.]+', part):
            version = part.split('(')[0]
            break
    
    return product, version

def query_nvd(product: str, version: str) -> List[Dict]:
    """Query NVD for CVEs"""
    try:
        url = "https://services.nvd.nist.gov/rest/json/cves/2.0"
        headers = {'apiKey': NVD_API_KEY} if NVD_API_KEY else {}
        params = {'keywordSearch': f"{product} {version}", 'resultsPerPage': 10}
        
        response = requests.get(url, params=params, headers=headers, timeout=15)
        
        if response.status_code == 200:
            data = response.json()
            vulns = []
            
            for item in data.get('vulnerabilities', []):
                cve = item.get('cve', {})
                cve_id = cve.get('id', 'N/A')
                
                metrics = cve.get('metrics', {})
                cvss_score = 0.0
                severity = "UNKNOWN"
                
                if 'cvssMetricV31' in metrics and metrics['cvssMetricV31']:
                    cvss_data = metrics['cvssMetricV31'][0]['cvssData']
                    cvss_score = cvss_data.get('baseScore', 0.0)
                    severity = cvss_data.get('baseSeverity', 'UNKNOWN')
                elif 'cvssMetricV2' in metrics and metrics['cvssMetricV2']:
                    cvss_score = metrics['cvssMetricV2'][0]['cvssData'].get('baseScore', 0.0)
                
                desc = cve.get('descriptions', [{}])[0].get('value', 'No description')[:200]
                
                vulns.append({
                    'cve_id': cve_id,
                    'cvss_score': cvss_score,
                    'severity': severity,
                    'description': desc
                })
            
            return vulns
    except Exception as e:
        print(f"NVD query error for {product} {version}: {e}", file=sys.stderr)
    
    return []

# Main execution
